<!-- this will be the landing page for the EPK as a whole -->
<div class="page profile profile-show clearfix">
	<div class ="col-md-8 col-md-offset-2">

	<div class ="bio" style="background-image: url(<%= @profile.cover_photo.url() %>)">
		<div class="row">
				<div class="avatar">
					<div class="image" style="background-image: url(<%= @profile.avatar.url(:medium) %>)"></div>
				</div>
		</div>
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="bio-box">
						<strong><%= @profile.bio %></strong>
					</div>
				</div>
			</div>
	</div>
	
	<div class="soundcloud">
		<p>
			<% if !@profile.embed.blank? %>
				<%= render :inline => @profile.embed %>
			<% end %>
		</p>
	</div>

<!-- Projects Row -->
<div class="row">
	<% @pictures.each do |pic| %>
		<div class="col-md-4 portfolio-item">
		<%= image_tag pic.image.url, :class => 'img-responsive' %>
		<% if @profile.user == current_user %>
		<div class ="row">
        <%= button_to "Edit picture", edit_picture_path(pic), :class => 'button', :method => :get %>
        <%=
          button_to "Delete picture", pic,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>
          <% end %>
          </div>
	    </div>
	<% end %>
</div>
<!-- /.row -->

	<div class="social-media">
		<p>Check out the rest of <%= @profile.name %>'s social media here:</p>	
		<div class="icons">
		
			<% if !@profile.facebook.blank? %>
				<%= link_to '<i class="fa fa-facebook-square fa-3x"></i>' .html_safe, @profile.facebook %>
			<% end %>
				&nbsp;&nbsp;&nbsp;
			<% if !@profile.twitter.blank? %>
				<%= link_to '<i class="fa fa-twitter-square fa-3x"></i>' .html_safe, @profile.twitter %>
			<% end %>
				&nbsp;&nbsp;&nbsp;
			<% if !@profile.soundcloud.blank? %>
				<%= link_to '<i class="fa fa-soundcloud fa-3x"></i>' .html_safe, @profile.soundcloud %>
			<% end %>
		</div>
	</div>


		
	</div>
</div>